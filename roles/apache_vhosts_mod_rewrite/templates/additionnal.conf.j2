# https://httpd.apache.org/docs/current/fr/mod/mod_rewrite.html
  RewriteEngine On
  {% if item.value.webapps != None  and item.value.webapps|length > 0 %}
  RewriteRule ^/$ http://{{ item.value.host }}:{{ item.value.port }}/{{ item.value.webapps }}/ [P]
  RewriteRule ^/{{ item.value.webapps }}(.*)$ http://{{ item.value.host }}:{{ item.value.port }}/{{ item.value.webapps }}$1 [P]
  ProxyPassReverse /{{ item.value.webapps }} http://{{ item.value.host }}:{{ item.value.port }}/{{ item.value.webapps }}
  {% else %}
  RewriteRule ^/$ http://{{ item.value.host }}:{{ item.value.port }}/ [P]
  RewriteRule ^/(.*)$ http://{{ item.value.host }}:{{ item.value.port }}/$1 [P]
  ProxyPassReverse / http://{{ item.value.host }}:{{ item.value.port }}/
  {% endif %}


 
  # Customizable error responses come in three flavors:
